---
// src/components/blog/TimeMachine.astro
// 这是一个归档时间线组件
---

<div class="space-y-2 max-h-80 overflow-y-auto">
  <div class="timeline">
    <!-- 这里可以添加具体的时间线内容 -->
    <div class="timeline-item">
      <div class="timeline-marker"></div>
      <div class="timeline-content">
        <p class="font-medium">2024年</p>
        <p class="text-sm opacity-70">12篇文章</p>
      </div>
    </div>
    <!-- 更多时间线项... -->
  </div>
</div>

<style>
  .timeline {
    position: relative;
    padding-left: 1.5rem;
  }
  .timeline::before {
    content: '';
    position: absolute;
    left: 7px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: hsl(var(--p));
    opacity: 0.3;
  }
  .timeline-item {
    position: relative;
    margin-bottom: 1rem;
  }
  .timeline-marker {
    position: absolute;
    left: -1.5rem;
    top: 0.25rem;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: hsl(var(--p));
  }
  .timeline-content {
    padding-left: 0.5rem;
  }
</style>