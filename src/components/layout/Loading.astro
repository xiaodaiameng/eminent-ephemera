---
// src/components/Loading.astro
---

<div id="loading-screen" style="
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  transition: all 0.5s ease;
">
  <div style="text-align: center;">
    <!-- Logo -->
    <div style="margin-bottom: 30px;">
      <img src="/loadingflower.svg" alt="Logo" style="width: 80px; height: 80px;" />
    </div>
    <div style="
      display: flex;
      justify-content: center;
      gap: 8px;
      margin-bottom: 30px;
    ">
      <div class="dot" style="
        width: 12px;
        height: 12px;
        background: #ff6b9d;
        border-radius: 50%;
        animation: bounce 0.6s infinite alternate;
      "></div>
      <div class="dot" style="
        width: 12px;
        height: 12px;
        background: #4ecdc4;
        border-radius: 50%;
        animation: bounce 0.6s infinite alternate 0.2s;
      "></div>
      <div class="dot" style="
        width: 12px;
        height: 12px;
        background: #45b7d1;
        border-radius: 50%;
        animation: bounce 0.6s infinite alternate 0.4s;
      "></div>
      <div class="dot" style="
        width: 12px;
        height: 12px;
        background: #96ceb4;
        border-radius: 50%;
        animation: bounce 0.6s infinite alternate 0.6s;
      "></div>
    </div>
    <p style="color: #666; font-size: 0.9rem;">加载中</p>
  </div>
</div>

<style>
  @keyframes bounce {
    from { transform: translateY(0); }
    to { transform: translateY(-15px); }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const loading = document.getElementById('loading-screen');
    
    // 最小显示时间（避免闪屏）
    setTimeout(() => {
      loading.style.opacity = '0';
      setTimeout(() => {
        loading.style.display = 'none';
      }, 500);
    }, 900); // 至少显示x秒
  });
</script>