import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/sidebar.css';
import '../styles/blog.css';
---

<BaseLayout title="关于另一个后台" description="关于另一个后台">
  <br><br><br><br><br><br>
  
  <div class="content-container">
    <table class="subject-table">
      <p style="color: #000000; margin: 0; font-size: 18px; font-weight: bold;">开往何处</p>
      <tr class="table-row">
        <td class="table-cell">
          <img src="/images/bigeduodong.webp" alt="图片" class="table-image"/>
        </td>
        <td class="table-cell">
          <h2 class="table-title">
            <a href="http://localhost:8080" target="_blank" class="table-link">sp001_db_123456789</a>
          </h2>
          <p class="table-desc">bobook && 阻塞状态</p>
        </td>
      </tr>
      <tr class="table-row">
        <td class="table-cell">
          <img src="/images/bigeduodong.webp" alt="图片" class="table-image"/>
        </td>
        <td class="table-cell">
          <h2 class="table-title">
            <!-- 修改：使用 class 而不是 id -->
            <a href="javascript:void(0);" class="table-link show-alert-link">空白</a>
          </h2>
          <p class="table-desc">完全空白状态</p>
        </td>
      </tr>
      <tr class="table-row">
        <td class="table-cell">
          <img src="/images/bigeduodong.webp" alt="图片" class="table-image"/>
        </td>
        <td class="table-cell">
          <h2 class="table-title">
            <!-- 修改：使用相同的 class -->
            <a href="javascript:void(0);" class="table-link show-alert-link">空白</a>
          </h2>
          <p class="table-desc">完全空白状态</p>
        </td>
      </tr>
    </table>
  </div>
  
  <!-- 自定义消息模态框 -->
  <div id="custom-alert" class="custom-alert">
    <div class="alert-content">
      <div class="alert-header">
        <h3>友情提示</h3>
        <button class="alert-close">×</button>
      </div>
      <div class="alert-body">
        <p>这个人很懒，什么都没留下呢。</p>
      </div>
      <div class="alert-footer">
        <button class="alert-confirm">确定</button>
      </div>
    </div>
  </div>
  
  <br><br><br><br><br><br><br><br><br><br><br><br>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // 修改：使用 class 选择器获取所有链接
    const showAlertLinks = document.querySelectorAll('.show-alert-link');
    const customAlert = document.getElementById('custom-alert');
    const alertClose = customAlert.querySelector('.alert-close');
    const alertConfirm = customAlert.querySelector('.alert-confirm');
    
    // 为每个链接添加点击事件
    showAlertLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        customAlert.classList.add('show');
        document.body.style.overflow = 'hidden';
      });
    });
    
    function closeAlert() {
      customAlert.classList.remove('show');
      document.body.style.overflow = '';
    }
    
    // 点击关闭按钮
    alertClose.addEventListener('click', closeAlert);
    
    // 点击确认按钮
    alertConfirm.addEventListener('click', closeAlert);
    
    // 点击模态框外部关闭
    customAlert.addEventListener('click', function(e) {
      if (e.target === customAlert) {
        closeAlert();
      }
    });
    
    // ESC键关闭
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && customAlert.classList.contains('show')) {
        closeAlert();
      }
    });
  });
</script>