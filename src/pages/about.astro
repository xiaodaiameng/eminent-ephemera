---
// src/pages/about.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/sidebar.css';
---

<BaseLayout title="关于另一个后台" description="关于另一个后台">
   <br><br><br><br><br><br><br><br><br><br><br><br><br><br> 
   <br><br><br><br><br><br><br><br><br><br><br><br><br><br>
  <!-- 自定义消息模态框 -->
  <div id="custom-alert" class="custom-alert">
    <div class="alert-content">
      <div class="alert-header">
        <h3>友情提示</h3>
        <button class="alert-close">×</button>
      </div>
      <div class="alert-body">
        <p>该页面还在开发中喔.</p>
      </div>
      <div class="alert-footer">
        <button class="alert-confirm">好的</button>
      </div>
    </div>
  </div>
  
  <!-- 返回首页按钮（默认隐藏） -->
  <div id="back-to-home" style="display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 1000;">
    <a href="/" style="
      display: inline-block;
      padding: 12px 24px;
      background-color: #4f46e5;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: bold;
      box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
      transition: all 0.3s ease;
    " 
    onmouseover="this.style.backgroundColor='#4338ca'; this.style.transform='translateY(-2px)';"
    onmouseout="this.style.backgroundColor='#4f46e5'; this.style.transform='translateY(0)';">
      返回首页
    </a>
  </div>
  
  <br><br><br><br><br><br><br><br><br><br><br><br><br><br>
</BaseLayout>

<script>
  // 页面加载时自动显示告警框
  document.addEventListener('DOMContentLoaded', function() {
    const customAlert = document.getElementById('custom-alert');
    const alertClose = customAlert.querySelector('.alert-close');
    const alertConfirm = customAlert.querySelector('.alert-confirm');
    const backToHome = document.getElementById('back-to-home');
    
    // 自动显示告警框
    customAlert.classList.add('show');
    document.body.style.overflow = 'hidden';
    
    function closeAlert() {
      customAlert.classList.remove('show');
      document.body.style.overflow = '';
      
      // 显示返回首页按钮
      backToHome.style.display = 'block';
    }
    
    // 点击关闭按钮
    alertClose.addEventListener('click', closeAlert);
    
    // 点击确认按钮
    alertConfirm.addEventListener('click', closeAlert);
    
    // 点击模态框外部关闭
    customAlert.addEventListener('click', function(e) {
      if (e.target === customAlert) {
        closeAlert();
      }
    });
    
    // ESC键关闭
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && customAlert.classList.contains('show')) {
        closeAlert();
      }
    });
  });
</script>