---
// src/pages/about.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/sidebar.css';
---

<BaseLayout title="关于另一个后台" description="关于另一个后台">
  <!-- 自定义消息模态框 -->
  <div id="custom-alert" class="custom-alert">
    <div class="alert-content">
      <div class="alert-header">
        <h3>友情提示</h3>
        <button class="alert-close">×</button>
      </div>
      <div class="alert-body">
        <p>该页面还在开发中喔.</p>
      </div>
      <div class="alert-footer">
        <button class="alert-confirm">好的</button>
      </div>
    </div>
  </div>
        <div class="flex flex-wrap gap-4 justify-center">
      <a href="/" 
        class="inline-block px-8 py-3 text-white text-lg font-medium rounded-lg transition-all duration-300 hover:scale-105"
        style="
          background: linear-gradient(135deg, #c6fbff 0%, #cf9fffd2 100%);
          color: #ffffff;
          box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        "
>
          返回首页
        </a>
      <a href="/oldblogpages" 
        class="inline-block px-8 py-3 text-white text-lg font-medium rounded-lg transition-all duration-300 hover:scale-105"
        style="
          background: linear-gradient(135deg, #f5deff 0%, #ff7d7dd2 100%);
          color: #ffffff;
          box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        "
>          查看博客
        </a>
      </div>
    </div>
  </div>
  <br><br><br><br><br><br><br><br><br><br><br><br><br><br>
</BaseLayout>

<script>
  // 页面加载时自动显示告警框
  document.addEventListener('DOMContentLoaded', function() {
    const customAlert = document.getElementById('custom-alert');
    const alertClose = customAlert.querySelector('.alert-close');
    const alertConfirm = customAlert.querySelector('.alert-confirm');
    
    // 自动显示告警框
    customAlert.classList.add('show');
    document.body.style.overflow = 'hidden';
    
    function closeAlert() {
      customAlert.classList.remove('show');
      document.body.style.overflow = '';
    }
    
    // 点击关闭按钮
    alertClose.addEventListener('click', closeAlert);
    
    // 点击确认按钮
    alertConfirm.addEventListener('click', closeAlert);
    
    // 点击模态框外部关闭
    customAlert.addEventListener('click', function(e) {
      if (e.target === customAlert) {
        closeAlert();
      }
    });
    
    // ESC键关闭
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && customAlert.classList.contains('show')) {
        closeAlert();
      }
    });
  });
</script>