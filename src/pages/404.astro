---
// src/pages/404.astro
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="页面未找到" description="抱歉，您访问的页面不存在">
  <div class="min-h-screen flex items-center justify-center">
    <div class="bg-container"></div>
    <div class="absolute inset-0 bg-black/50 backdrop-blur-[2px] z-0"></div>
    <div class="relative z-10 text-center px-4 max-w-2xl">
      <h1 class="text-[140px] md:text-[200px] font-black text-white mb-0 leading-none">
        404
      </h1>
      <h2 class="text-2xl md:text-4xl font-bold text-white mb-2">
        您来错地方啦。
      </h2>
      <div class="flex flex-wrap gap-4 justify-center">
        <a href="/" class="btn btn-primary btn-lg min-w-[160px]">
          返回首页
        </a>
        <a href="/blog" class="btn btn-outline btn-lg border-white text-white hover:bg-white/10 min-w-[160px]">
          查看博客
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .bg-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #1a1a1a;
    z-index: 0;
  }
  @media (max-width: 768px) {
    .bg-container {
      background-image: url('/images/cats.jpg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
  }
  @media (min-width: 769px) {
    .bg-container {
      background-image: url('/images/半灵.jpg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
  }
  @media (max-width: 640px) {
    h1 {
      font-size: 120px !important;
    }
    h2 {
      font-size: 1.5rem !important;
    }
    p {
      font-size: 1rem !important;
    }
  }
</style>